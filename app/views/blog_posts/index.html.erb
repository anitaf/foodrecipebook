<h1>Driven Food Posts</h1>

<div class="row">
    <% @blog_posts.each do |blog_post| %>
      <div class="col-md-12">
        <h2><%= link_to blog_post.title, blog_post %></h2>
        <h3><%= blog_post.author %></h3>
        <p><%= blog_post.blog_entry[0..250] %>...<%= link_to "Read More", blog_post %></p>
        <p>
        <%= link_to 'New Blog Post', new_blog_post_path %>

        <%= link_to 'Edit', edit_blog_post_path(blog_post) %>
        <%= link_to 'Destroy', blog_post, method: :delete, data: { confirm: 'Are you sure?' } %>
      </p>
      </div>
<br>
<% end %>
     
     

